@model RegisterVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Register</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/style.css">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register-card {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            overflow: hidden;
            max-width: 950px;
            width: 100%;
        }

        .register-image {
            background-color: #e8f5e9;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register-image img {
            max-width: 100%;
            height: auto;
        }

        .register-form {
            padding: 3rem;
        }

        .form-control {
            border-radius: 12px;
            height: 48px;
        }

        .btn-primary {
            background-color: #2e7d32;
            border-color: #2e7d32;
            border-radius: 12px;
            height: 48px;
            font-weight: 600;
        }

        .btn-primary:hover {
            background-color: #256628;
        }

        .btn-google {
            background-color: #e8f5e9;
            border: none;
            color: #2e7d32;
            border-radius: 12px;
            height: 48px;
            font-weight: 600;
        }

        .form-check-input:checked {
            background-color: #2e7d32;
            border-color: #2e7d32;
        }

        .title-highlight {
            color: #2e7d32;
            text-decoration: underline;
            text-underline-offset: 4px;
        }
    </style>
</head>
<body>
     <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" href="index.html">
                <i class="fas fa-graduation-cap me-2"></i>Learnix
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Courses/Index">Courses</a>
                    </li>
                </ul>

                <div class="d-flex">
                    <a href="/Account/Login" class="btn btn-outline-primary me-2">Login</a>
                    <a href="/Account/Register" class="btn btn-primary">Sign Up</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="register-card d-flex flex-column flex-md-row" style="margin-top: 100px;">
        <div class="register-image col-md-5 p-4">
            <img src="~/images/register-login.webp" alt="Registration Image" />
        </div>
        <div class="register-form col-md-7">
            <h3 class="mb-4 fw-bold">Registration <span class="title-highlight">Now</span></h3>

            <form asp-controller="Account" asp-action="SaveRegister" method="post" novalidate>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <input asp-for="UserName" class="form-control" placeholder="UserName" />
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="LastName" class="form-control" placeholder="LastName" />
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <!-- Role Selection -->
                <div class="mb-3">
                    <label class="form-label fw-semibold mb-2">Select Role</label>
                    <div class="d-flex gap-4">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="RoleName" id="instructor" value="Instructor" />
                            <label class="form-check-label" for="instructor">Instructor</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="RoleName" id="student" value="Student" />
                            <label class="form-check-label" for="student">Student</label>
                        </div>
                    </div>
                    <span asp-validation-for="RoleName" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3">Create an account</button>
                <a href="/Account/Login" class="btn btn-primary w-100 text-white text-decoration-none" style="background-color:dodgerblue;padding-top:10px">
                    Sign In
                </a>
            </form>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>

@model Learnix.ViewModels.AdminVMs.AdminUserVM

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-8 col-md-10 mx-auto my-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">User Details</h2>
        <div>
            <a asp-action="Users" asp-controller="Admin" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Back
            </a>
            <a asp-action="Edit" asp-controller="AdminUser" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit me-1"></i> Edit
            </a>
        </div>
    </div>

    <!-- User Card -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex align-items-center">
                <img src="/@(Model.ImageUrl ?? "/Images/Default_User_Image.jpg")"
                     alt="User"
                     class="rounded-circle me-3"
                     style="width:80px; height:80px; object-fit:cover;"
                     onerror="this.src='/images/default-user.png'">
                <div>
                    <h5 class="mb-0">@Model.FirstName @Model.LastName</h5>
                    <small class="text-light">@Model.UserName</small>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Email:</div>
                <div class="col-md-8">@Model.Email</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Role:</div>
                <div class="col-md-8">
                    @if (Model.RoleName == "Admin")
                    {
                        <span class="badge bg-info text-dark">Admin</span>
                    }
                    else if (Model.RoleName == "Instructor")
                    {
                        <span class="badge bg-warning text-dark">Instructor</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Student</span>
                    }
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">First Name:</div>
                <div class="col-md-8">@Model.FirstName</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Last Name:</div>
                <div class="col-md-8">@Model.LastName</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Username:</div>
                <div class="col-md-8">@Model.UserName</div>
            </div>
        </div>
    </div>
</div>


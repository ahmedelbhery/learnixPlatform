
@model Learnix.ViewModels.AdminVMs.AdminInstructorVM

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-8 col-md-10 mx-auto my-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Instructor Details</h2>
        <div>
            <a asp-action="Instructors" asp-controller="Admin" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Back
            </a>
            <a asp-action="Edit" asp-controller="AdminInstructor" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit me-1"></i> Edit
            </a>
        </div>
    </div>

    <!-- Instructor Card -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex align-items-center">
                <img src="/@(Model.ImageUrl ?? "/Images/Default_User_Image.jpg")"
                     alt="Avatar"
                     class="rounded-circle me-3"
                     style="width:60px; height:60px; object-fit:cover;"
                     onerror="this.src='/images/default-user.png'">
                <div>
                    <h5 class="mb-0">@Model.FirstName @Model.LastName</h5>
                    <small class="text-light">@Model.UserName</small>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Email:</div>
                <div class="col-md-8">@Model.Email</div>
            </div>
            @* <div class="row mb-3">
                <div class="col-md-4 fw-bold">Specialty:</div>
                <div class="col-md-8">
                    <span class="badge bg-primary">@Model.Specialty</span>
                </div>
            </div> *@
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Courses Count:</div>
                <div class="col-md-8">@Model.CoursesCount</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Students Count:</div>
                <div class="col-md-8">@Model.StudentsCount</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Total Earnings:</div>
                <div class="col-md-8 text-success fw-bold">$@Model.Earnings.ToString("N0")</div>
            </div>
        </div>
    </div>
</div>



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - EduLearn</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
    <div class="container-fluid">
        <!--  Logo on the left -->
        <a class="navbar-brand fw-bold text-primary" href="/Home/index">
            <i class="fas fa-graduation-cap me-2"></i>Learnix
        </a>

        <!-- Toggle button for mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!--  Navigation and right-side user dropdown -->
        <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
            <!-- Left nav links (optional, currently empty) -->
                <ul class="navbar-nav ">

                    <li class="nav-item mx-1">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                           href="/Home/Index">
                            Home
                        </a>
                    </li>

                    <li class="nav-item mx-1">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")"
                           href="/Home/About">
                            About Us
                        </a>
                    </li>

                    <li class="nav-item mx-1">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Courses" ? "active" : "")"
                           href="/Courses/Index">
                            Courses
                        </a>
                    </li>

                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item mx-1">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "DisplayProfile" ? "active" : "")"
                               href="/Account/DisplayProfile">
                                Profile
                            </a>
                        </li>
                    }
                </ul>


            <!--  Profile dropdown on the right -->
            <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        @User.Identity.Name
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Account/DisplayProfile"><i class="fas fa-user me-2"></i>Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Account/LogOut"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                    </ul>
            </div>
        </div>
    </div>
</nav>


    <!-- Dashboard Content -->
    <div class="dashboard-container" style="margin-top: 80px;">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-2 col-md-3 bg-light sidebar p-0" style="min-height: calc(100vh - 80px);">
                    <div class="sidebar-content p-3">
                        <nav class="nav flex-column">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]!.ToString() == "Index" ? "active" : "")"
                               asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>

                            <a class="nav-link @(ViewContext.RouteData.Values["action"]!.ToString() == "Users" ? "active" : "")"
                               asp-controller="Admin" asp-action="Users">
                                <i class="fas fa-users me-2"></i>Users
                            </a>

                            <a class="nav-link @(ViewContext.RouteData.Values["action"]!.ToString() == "Courses" ? "active" : "")"
                               asp-controller="Admin" asp-action="Courses">
                                <i class="fas fa-book me-2"></i>Courses
                            </a>

                            <a class="nav-link @(ViewContext.RouteData.Values["action"]!.ToString() == "Instructors" ? "active" : "")"
                               asp-controller="Admin" asp-action="Instructors">
                                <i class="fas fa-chalkboard-teacher me-2"></i>Instructors
                            </a>

                            <a class="nav-link @(ViewContext.RouteData.Values["action"]!.ToString() == "InstructorReviewRequest" ? "active" : "")"
                               asp-controller="RequestReview" asp-action="InstructorReviewRequest">
                                <i class="fas fa-chalkboard-teacher me-2"></i>Instructors Review
                            </a>

                            <a class="nav-link @(ViewContext.RouteData.Values["action"]!.ToString() == "CoursesReview" ? "active" : "")"
                               asp-controller="Course" asp-action="CoursesReview">
                                <i class="fas fa-chalkboard-teacher me-2"></i>Courses Review
                            </a>

                        </nav>
                    </div>
                </div>

                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/assets/js/script.js"></script>
    @RenderSection("Scripts",false)
   
</body>
</html>

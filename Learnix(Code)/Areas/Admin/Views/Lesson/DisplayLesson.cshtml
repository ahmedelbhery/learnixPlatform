@model LessonInfoVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title - Lesson Info</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background: #eff2f7;
            font-family: 'Segoe UI', sans-serif;
        }

        .card-custom {
            background: white;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0px 6px 18px rgba(0,0,0,0.10);
        }

        .section-title {
            font-weight: 600;
            margin-top: 25px;
        }

        .video-box {
            border-radius: 15px;
            overflow: hidden;
            margin-top: 10px;
            border: 2px solid #dee2e6;
        }

        .info-label {
            font-weight: 600;
            color: #555;
        }
    </style>
</head>

<body>

    <div class="container mt-5 mb-5">

        <!-- Back Button -->
        <div class="d-flex justify-content-end mb-4">
            <a href="/Admin/Course/DisplayCourseContent/@Model.CourseID" class="btn btn-dark">
                Back to Course
            </a>
        </div>

        <div class="card-custom">

            <!-- Title -->
            <h2 class="fw-bold">@Model.Title</h2>
            <p class="text-muted">Lesson Order: <strong>@Model.Order</strong></p>

            <!-- Duration -->
            @if (!string.IsNullOrEmpty(Model.Duration))
            {
                <p><span class="info-label">Duration:</span> @Model.Duration</p>
            }

            <hr />

            <!-- Description -->
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <h5 class="section-title">Description</h5>
                <p>@Model.Description</p>
            }

            <!-- Learning Objectives -->
            @if (!string.IsNullOrWhiteSpace(Model.LearningObjectives))
            {
                <h5 class="section-title">Learning Objectives</h5>
                <div>
                    @foreach (var obj in Model.LearningObjectives.Split('\n'))
                    {
                        if (!string.IsNullOrWhiteSpace(obj))
                        {
                            <p>• @obj</p>
                        }
                    }
                </div>
            }

            <!-- Video -->
            @if (!string.IsNullOrEmpty(Model.VideoUrl))
            {
                <h5 class="section-title">Video Preview</h5>
                <div class="video-box">
                    <video width="100%" controls>
                        <source src=@Model.VideoUrl type="video/mp4" />
                        Your browser does not support video playback.
                    </video>
                </div>
            }

            <hr class="mt-4" />

            @* <!-- Action Buttons -->
            <div class="d-flex gap-2 mt-3">
                <a asp-action="EditLesson" asp-route-id="@Model.LessonId" class="btn btn-warning">
                    Edit Lesson
                </a>

                <button onclick="deleteLesson(@Model.LessonId)" class="btn btn-danger">
                    Delete Lesson
                </button>
            </div> *@

        </div>

    </div>

    @* <script>
        function deleteLesson(id) {
            if (confirm("Are you sure you want to delete this lesson?")) {
                window.location.href = "/Lesson/DeleteLesson?id=" + id;
            }
        }
    </script> *@

</body>
</html>

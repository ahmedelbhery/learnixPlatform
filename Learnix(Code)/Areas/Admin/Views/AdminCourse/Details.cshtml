
@model Learnix.ViewModels.AdminVMs.AdminCourseVM

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-8 col-md-10 mx-auto my-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Course Details</h2>
        <div>
            <a asp-action="Courses" asp-controller="Admin" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Back
            </a>
            <a asp-action="Edit" asp-controller="AdminCourse" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit me-1"></i> Edit
            </a>
        </div>
    </div>

    <!-- Course Card -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex align-items-center">
                <img src="/@(Model.ImageUrl ?? "/Images/Default_User_Image.jpg")"
                     alt="Course"
                     class="rounded me-3"
                     style="width:80px; height:80px; object-fit:cover;"
                     onerror="this.src='/images/default-course.png'">
                <div>
                    <h5 class="mb-0">@Model.Title</h5>
                    <small class="text-light">@Model.Language • @Model.Level</small>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Description:</div>
                <div class="col-md-8">@Model.Description</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Instructor:</div>
                <div class="col-md-8">@Model.InstructorName</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Category:</div>
                <div class="col-md-8">
                    <span class="badge bg-primary">@Model.Category</span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Language:</div>
                <div class="col-md-8">@Model.Language</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Level:</div>
                <div class="col-md-8">@Model.Level</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Students Count:</div>
                <div class="col-md-8">@Model.StudentsCount</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Lessons Count:</div>
                <div class="col-md-8">@Model.LessonsCount</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Duration:</div>
                <div class="col-md-8">
                    @{
                        var hours = Model.Duration / 60;
                        var minutes = Model.Duration % 60;
                        var durationText = hours > 0 ? $"{hours}h {minutes}m" : $"{minutes}m";
                    }
                    @durationText
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Price:</div>
                <div class="col-md-8 text-success fw-bold">$@Model.Price</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 fw-bold">Status:</div>
                <div class="col-md-8">
                    @if (Model.Status?.ToLower() == "published")
                    {
                        <span class="badge bg-success">Published</span>
                    }
                    else if (Model.Status?.ToLower() == "pending")
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else if (Model.Status?.ToLower() == "draft")
                    {
                        <span class="badge bg-secondary">Draft</span>
                    }
                    else
                    {
                        <span class="badge bg-info">@Model.Status</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@model AllCourseReviewsVM
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses Reviews - Admin Dashboard</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-primary" href="/Home/Index">
                <i class="fas fa-graduation-cap me-2"></i>Learnix
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Admin/Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Admin/Users">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/Admin/Admin/Courses">Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Admin/Instructors">Instructors</a>
                    </li>
                </ul>

                <div class="d-flex align-items-center">
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <img src=@(Model.AdminImageUrl == null ? "/Images/Default_User_Image.jpg" : "/" + Model.AdminImageUrl)
                                 alt="Profile" class="rounded-circle me-2" style="width: 32px; height: 32px;">
                            @(Model.AdminFirstName + " " + Model.AdminLasttName)
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/Account/DisplayProfile"><i class="fas fa-user me-2"></i>Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Account/LogOut"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                        </ul>
                    </div>
                </div>


            </div>
        </div>
    </nav>

    <!-- Dashboard Content -->
    <div class="dashboard-container" style="margin-top: 80px;">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-2 col-md-3 bg-light sidebar p-0" style="min-height: calc(100vh - 80px);">
                    <div class="sidebar-content p-3">
                        <nav class="nav flex-column">
                            <a class="nav-link" href="/Admin/Admin/Index">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                            <a class="nav-link" href="/Admin/Admin/Users">
                                <i class="fas fa-users me-2"></i>Users
                            </a>
                            <a class="nav-link active" href="/Admin/Admin/Courses">
                                <i class="fas fa-book me-2"></i>Courses
                            </a>
                            <a class="nav-link" href="/Admin/Admin/Instructors">
                                <i class="fas fa-chalkboard-teacher me-2"></i>Instructors
                            </a>
                            <a class="nav-link" href="/Admin/RequestReview/InstructorReviewRequest">
                                <i class="fas fa-chart-bar me-2"></i>Instructors Review
                            </a>
                            <a class="nav-link" href="/Admin/Course/CoursesReview">
                                <i class="fas fa-file-alt me-2"></i>Courses Review
                            </a>
                           
                        </nav>
                    </div>
                </div>

                <!-- Toast Notification -->
                <div class="position-fixed top-0 end-0 p-3" style="z-index: 1050;">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="d-flex">
                                <div class="toast-body">
                                    @TempData["SuccessMessage"]
                                </div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                        </div>
                    }
                </div>


                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        var toastEl = document.getElementById('successToast');
                        if (toastEl) {
                            var toast = new bootstrap.Toast(toastEl, { delay: 3000 }); // 3 seconds
                            toast.show();
                        }
                    });
                </script>

                <!-- Main Content -->
                <div class="col-lg-10 col-md-9 p-4">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2 class="fw-bold mb-2">Courses Reviews</h2>
                            <p class="text-muted">Review all courses and their content</p>
                        </div>
                    </div>

                  

                    <!-- Courses Table -->
                    <div class="dashboard-card">

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="fw-bold mb-0">Courses List</h5>
                            <div class="d-flex">
                               
                                <form asp-action="CoursesReview" method="get" class="d-flex mb-3">
                                    <input type="text" name="search" value="@Model.SearchTerm" class="form-control me-2" placeholder="Search by Instructor Name, Course or Category">
                                    <button type="submit" class="btn btn-primary">Search</button>
                                </form>

                            </div>
                        </div>


                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Course</th>
                                        <th>Instructor</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach(var crs in Model.courseReviewVMs)
                                    {
                                        <tr>


                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src=/@crs.CourseImageUrl
                                                         alt="Course" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                                    <div>
                                                        <h6 class="fw-bold mb-0">@crs.CourseTitle</h6>
                                                        <small class="text-muted">@crs.CategoryName</small>
                                                    </div>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src=@(crs.InstructorImageUrl == null ? "/Images/Default_User_Image.jpg" : "/" + crs.InstructorImageUrl)
                                                         alt="Instructor" class="rounded-circle me-2" style="width: 30px; height: 30px; object-fit: cover;">
                                                    <span>@crs.InstructorFullName</span>
                                                </div>
                                            </td>

                                            <td>
                                                <span class="badge bg-primary">@crs.CategoryName</span>
                                            </td>

                                            <td>

                                                @if (crs.CourseStatus == "Draft")
                                                {
                                                    <span class="badge bg-warning">Pending</span>
                                                }
                                                else if (crs.CourseStatus == "Rejected")
                                                {
                                                    <span class="badge bg-danger">Rejected</span>
                                                }

                                            </td>

                                            <td>
                                                <div class="btn-group btn-group-sm">

                                                    <a href="/Admin/Course/DisplayCourseInfo/@crs.CourseId"
                                                       class="btn btn-outline-success"
                                                       title="Display Course Info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>

                                                    <a href="/Admin/Course/ApproveCourse/@crs.CourseId?InstructorEmail=@crs.InstructorEmail"
                                                       class="btn btn-outline-success" title="Approve">
                                                        <i class="fas fa-check"></i>
                                                    </a>

                                                    @if (crs.CourseStatus == "Draft")
                                                    {
                                                        <a href="/Admin/Course/RejectCourse/@crs.CourseId?InstructorEmail=@crs.InstructorEmail"
                                                           class="btn btn-outline-danger" title="Reject">
                                                            <i class="fas fa-times"></i>
                                                        </a>
                                                    }
                                                    
                                                    <a href="/Admin/Course/DisplayCourseContent/@crs.CourseId"
                                                       class="btn btn-outline-info"
                                                       title="Display Course Content">
                                                        <i class="fas fa-chart-bar"></i>
                                                    </a>

                                                </div>
                                            </td>

                                        </tr>
                                        
                                    }


                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <nav aria-label="Students pagination" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                    <a class="page-link" href="?search=@Model.SearchTerm&page=@(Model.PageIndex - 1)">Previous</a>
                                </li>

                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                        <a class="page-link" href="?search=@Model.SearchTerm&page=@i">@i</a>
                                    </li>
                                }

                                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                    <a class="page-link" href="?search=@Model.SearchTerm&page=@(Model.PageIndex + 1)">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/assets/js/script.js"></script>
</body>
</html>

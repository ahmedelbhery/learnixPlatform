@model AllInstructorCoursesVM

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Course - Instructor Dashboard</title>

    @* <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/style.css"> *@

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/style.css">

</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-primary" href="/Home/Index">
                <i class="fas fa-graduation-cap me-2"></i>Learnix
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Instructor/Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Instructor/Course">My Courses</a>
                    </li>
                   
                </ul>

                <div class="d-flex align-items-center">
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <img src=@(Model.InstructorImageUrl == null ? "/Images/Default_User_Image.jpg" : "/" + Model.InstructorImageUrl)
                                 alt="Profile" class="rounded-circle me-2" style="width: 32px; height: 32px;">
                            @(Model.InstructorFirstName + " " + Model.InstructorLasttName)
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/Account/DisplayProfile"><i class="fas fa-user me-2"></i>Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Account/LogOut"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                        </ul>
                    </div>
                </div>

               
            </div>
        </div>
    </nav>

    <!-- Dashboard Content -->
    <div class="dashboard-container" style="margin-top: 80px;">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-2 col-md-3 bg-light sidebar p-0" style="min-height: calc(100vh - 80px);">
                    <div class="sidebar-content p-3">
                        <nav class="nav flex-column">
                            <a class="nav-link active" href="/Instructor/Dashboard">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                            <a class="nav-link" href="/Instructor/Course/CreateCourse">
                                <i class="fas fa-plus-circle me-2"></i>Create Course
                            </a>
                            <a class="nav-link" href="/Instructor/Section/CreateSection">
                                <i class="fas fa-plus-circle me-2"></i>Create Section
                            </a>
                            <a class="nav-link" href="/Instructor/Lesson/CreateLesson">
                                <i class="fas fa-plus-circle me-2"></i>Create Lesson
                            </a>
                            <a class="nav-link" href="/Instructor/Course">
                                <i class="fas fa-book me-2"></i>My Courses
                            </a>
                        </nav>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-10 col-md-9 p-4">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2 class="fw-bold mb-2">My Courses</h2>
                            <p class="text-muted">Manage and track your course performance</p>
                        </div>
                        <div>
                            <a href="/Instructor/Course/CreateCourse" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create New Course
                            </a>
                        </div>
                    </div>

                    <!-- Course Stats -->
                    <div class="row mb-4">
                        <div class="col-lg-3 col-md-6 mb-3">
                            <div class="dashboard-card">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-primary text-white rounded-circle me-3">
                                        <i class="fas fa-book"></i>
                                    </div>
                                    <div>
                                        <h4 class="fw-bold mb-0">@Model.TotalNumofInstructorCourses</h4>
                                        <p class="text-muted mb-0">Total Courses</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-3">
                            <div class="dashboard-card">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-success text-white rounded-circle me-3">
                                        <i class="fas fa-eye"></i>
                                    </div>
                                    <div>
                                        <h4 class="fw-bold mb-0">@Model.TotalNumofInstructorPublishedCourses</h4>
                                        <p class="text-muted mb-0">Published</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-3">
                            <div class="dashboard-card">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-warning text-white rounded-circle me-3">
                                        <i class="fas fa-edit"></i>
                                    </div>
                                    <div>
                                        <h4 class="fw-bold mb-0">@Model.TotalNumofInstructorDraftedCourses</h4>
                                        <p class="text-muted mb-0">Drafts</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-3">
                            <div class="dashboard-card">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-danger text-white rounded-circle me-3">
                                        <i class="fas fa-times-circle"></i>
                                    </div>
                                    <div>
                                        <h4 class="fw-bold mb-0">@Model.TotalNumofInstructorRejectedCourses</h4>
                                        <p class="text-muted mb-0">Rejected</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-3">
                            <div class="dashboard-card">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-info text-white rounded-circle me-3">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <div>
                                        <h4 class="fw-bold mb-0">@Model.TotalNumofInstructorStudents</h4>
                                        <p class="text-muted mb-0">Total Students</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Course Filter Tabs -->
                    <div class="dashboard-card mb-4">
                        <ul class="nav nav-tabs" id="courseTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="all-courses-tab" data-bs-toggle="tab" data-bs-target="#all-courses" type="button" role="tab">
                                    All Courses (@Model.TotalNumofInstructorCourses)
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="published-tab" data-bs-toggle="tab" data-bs-target="#published" type="button" role="tab">
                                    Published (@Model.TotalNumofInstructorPublishedCourses)
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="drafts-tab" data-bs-toggle="tab" data-bs-target="#drafts" type="button" role="tab">
                                    Drafts (@Model.TotalNumofInstructorDraftedCourses)
                                </button>
                            </li>

                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="archived-tab" data-bs-toggle="tab" data-bs-target="#archived" type="button" role="tab">
                                    Rejected (@Model.TotalNumofInstructorRejectedCourses)
                                </button>
                            </li>

                        </ul>
                    </div>

                    <!-- Course List -->
                    <div class="dashboard-card">
                        <div class="tab-content" id="courseTabsContent">
                            <!-- All Courses Tab -->
                            <div class="tab-pane fade show active" id="all-courses" role="tabpanel">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Course</th>
                                                <th>Students</th>
                                                <th>Revenue</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach(var crs in Model.AllCoursesDetails)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <img src="@("/" + crs.ImageUrl)"
                                                                 alt="Course" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                                            <div>
                                                                <h6 class="fw-bold mb-0">@crs.Title</h6>
                                                                <small class="text-muted">@crs.CategoryName</small>
                                                            </div>
                                                        </div>
                                                    </td>

                                                    <td>
                                                        <div class="text-center">
                                                            <div class="fw-bold">@crs.TotalNumberOfStudent</div>
                                                        </div>
                                                    </td>

                                                    <td>
                                                        <div class="fw-bold"> @("$" + crs.TotalEarning)</div>
                                                    </td>

                                                    <td>
                                                        @if(crs.CourseStatus == "Draft")
                                                        {
                                                            <span class="badge bg-warning">@crs.CourseStatus</span>
                                                        }

                                                        else if(crs.CourseStatus == "Published")
                                                        {
                                                            <span class="badge bg-success">@crs.CourseStatus</span>
                                                        }

                                                        else
                                                        {
                                                            <span class="badge bg-danger">@crs.CourseStatus</span>
                                                        }

                                                        
                                                    </td>

                                                    <td>
                                                        <div class="btn-group btn-group-sm">

                                                            <a href="/Instructor/Course/EditCourse/@crs.Id"
                                                               class="btn btn-outline-primary"
                                                               title="Edit">
                                                                <i class="fas fa-edit"></i>
                                                            </a>

                                                            <a href="/Instructor/Course/DisplayCourseContent/@crs.Id"
                                                               class="btn btn-outline-info"
                                                               title="Display Course Content">
                                                                <i class="fas fa-chart-bar"></i>
                                                            </a>

                                                            <a href="/Instructor/Course/DisplayCourseInfo/@crs.Id"
                                                               class="btn btn-outline-success"
                                                               title="Display Course Info">
                                                                <i class="fas fa-eye"></i>
                                                            </a>

                                                            @if (crs.CourseStatus == "Published")
                                                            {
                                                                <a href="/Instructor/Course/DisplayCourseStudents/@crs.Id"
                                                                   class="btn btn-outline-secondary"
                                                                   title="Students">
                                                                    <i class="fas fa-users"></i>
                                                                </a>
                                                            }

                                                        </div>
                                                    </td>


                                                </tr>
                                             }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Published Tab -->
                            <div class="tab-pane fade" id="published" role="tabpanel">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Course</th>
                                                <th>Students</th>
                                                <th>Revenue</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var crs in Model.PublishedCoursesDetails)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <img src="@("/" + crs.ImageUrl)"
                                                                 alt="Course" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                                            <div>
                                                                <h6 class="fw-bold mb-0">@crs.Title</h6>
                                                                <small class="text-muted">@crs.CategoryName</small>
                                                            </div>
                                                        </div>
                                                    </td>

                                                    <td>
                                                        <div class="text-center">
                                                            <div class="fw-bold">@crs.TotalNumberOfStudent</div>
                                                        </div>
                                                    </td>

                                                    <td>
                                                        <div class="fw-bold"> @("$" + crs.TotalEarning)</div>
                                                    </td>

                                                  

                                                    <td>
                                                        <div class="btn-group btn-group-sm">

                                                            <a href="/Instructor/Course/EditCourse/@crs.Id"
                                                               class="btn btn-outline-primary"
                                                               title="Edit">
                                                                <i class="fas fa-edit"></i>
                                                            </a>

                                                            <a href="/Instructor/Course/DisplayCourseContent/@crs.Id"
                                                               class="btn btn-outline-info"
                                                               title="Display Course Content">
                                                                <i class="fas fa-chart-bar"></i>
                                                            </a>

                                                            <a href="/Instructor/Course/DisplayCourseInfo/@crs.Id"
                                                               class="btn btn-outline-success"
                                                               title="Display Course Info">
                                                                <i class="fas fa-eye"></i>
                                                            </a>

                                                            <a href="/Instructor/Course/DisplayCourseStudents/@crs.Id"
                                                               class="btn btn-outline-secondary"
                                                               title="Students">
                                                                <i class="fas fa-users"></i>
                                                            </a>
                                                        </div>
                                                    </td>

                                                </tr>

                                            }
                                            

                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Drafts Tab -->
                            <div class="tab-pane fade" id="drafts" role="tabpanel">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Course</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var crs in Model.DraftedCoursesDetails)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <img src="@("/" + crs.ImageUrl)"
                                                                 alt="Course" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                                            <div>
                                                                <h6 class="fw-bold mb-0">@crs.Title</h6>
                                                                <small class="text-muted">@crs.CategoryName</small>
                                                            </div>
                                                        </div>
                                                    </td>

                                                    <td>
                                                        <div class="btn-group btn-group-sm">

                                                            <a href="/Instructor/Course/EditCourse/@crs.Id"
                                                               class="btn btn-outline-primary"
                                                               title="Edit">
                                                                <i class="fas fa-edit"></i>
                                                            </a>

                                                            <a href="/Instructor/Course/DisplayCourseContent/@crs.Id"
                                                               class="btn btn-outline-info"
                                                               title="Display Course Content">
                                                                <i class="fas fa-chart-bar"></i>
                                                            </a>

                                                            <a href="/Instructor/Course/DisplayCourseInfo/@crs.Id"
                                                               class="btn btn-outline-success"
                                                               title="Display Course Info">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                        </div>
                                                    </td>

                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Rejected Tab -->
                            <div class="tab-pane fade" id="archived" role="tabpanel">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Course</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var crs in Model.RejectedCoursesDetails)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <img src="@("/" + crs.ImageUrl)"
                                                                 alt="Course" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                                            <div>
                                                                <h6 class="fw-bold mb-0">@crs.Title</h6>
                                                                <small class="text-muted">@crs.CategoryName</small>
                                                            </div>
                                                        </div>
                                                    </td>

                                                    <td>
                                                        <div class="btn-group btn-group-sm">

                                                            <a href="/Instructor/Course/EditCourse/@crs.Id"
                                                               class="btn btn-outline-primary"
                                                               title="Edit">
                                                                <i class="fas fa-edit"></i>
                                                            </a>

                                                            <a href="/Instructor/Course/DisplayCourseContent/@crs.Id"
                                                               class="btn btn-outline-info"
                                                               title="Display Course Content">
                                                                <i class="fas fa-chart-bar"></i>
                                                            </a>

                                                            <a href="/Instructor/Course/DisplayCourseInfo/@crs.Id"
                                                               class="btn btn-outline-success"
                                                               title="Display Course Info">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                        </div>
                                                    </td>

                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/assets/js/script.js"></script> *@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/script.js"></script>

   

    
</body>
</html>


@model CourseDetailsVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Title - Course Details</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f5f7fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .hero {
            height: 320px;
            background: linear-gradient(rgba(0,0,0,.5), rgba(0,0,0,.6)), url('@Model.ImageUrl') center/cover no-repeat;
            border-bottom-left-radius: 40px;
            border-bottom-right-radius: 40px;
            color: white;
            display: flex;
            align-items: center;
            padding: 40px;
        }

        .course-card {
            margin-top: -120px;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .course-img {
            width: 100%;
            height: 260px;
            object-fit: cover;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
            gap: 15px;
        }

        .info-box {
            background: white;
            border-radius: 15px;
            padding: 15px;
            text-align: center;
            border: 1px solid #eee;
        }

        .section-card {
            background: white;
            border-radius: 20px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,.05);
        }

        .price-box {
            background: #ffffff;
            border-radius: 16px;
            padding: 25px;
            text-align: center;
            border: 2px solid #0d6efd;
            box-shadow: 0 8px 20px rgba(0,0,255,0.05);
        }

        .badge-custom {
            background: #0d6efd;
            padding: 8px 14px;
            border-radius: 14px;
            font-size: 0.85rem;
        }
    </style>
</head>

<body>

    <!-- HERO HEADER -->
    <div class="hero position-relative">
        <!-- Back to My Courses Button -->
        <a href="/Instructor/Course/Index"
           class="btn btn-light shadow-sm position-absolute top-0 end-0 m-4 px-4 py-2 rounded-pill fw-semibold"
           style="backdrop-filter: blur(6px); background: rgba(255,255,255,0.85);">
            ← Back to My Courses
        </a>

        <div>
            <h1 class="fw-bold">@Model.Title</h1>
            <p class="mt-3">@Model.CategoryName • @Model.LevelName • @Model.LanguageName</p>
        </div>
    </div>

    @* <!-- HERO HEADER -->
    <div class="hero">
        <div>
            <h1 class="fw-bold">@Model.Title</h1>
            <p class="mt-3">@Model.CategoryName • @Model.LevelName • @Model.LanguageName</p>
        </div>
    </div> *@

    <div class="container mt-4">

        <!-- MAIN COURSE CARD -->
        <div class="row justify-content-center">
            <div class="col-lg-10">

                <div class="card course-card">
                    <img src="/@Model.ImageUrl" class="course-img" />

                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            @if(Model.StatusName == "Published")
                            {
                                <span class="badge bg-primary fs-6">@Model.StatusName</span>
                            }
                            else if(Model.StatusName == "Draft")
                            {
                                <span class="badge bg-warning fs-6">@Model.StatusName</span>
                            }
                            else if (Model.StatusName == "Rejected")
                            {
                                <span class="badge bg-danger fs-6">@Model.StatusName</span>
                            }


                            @if (Model.IsFree)
                            {
                                <span class="badge bg-success fs-6">FREE</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark fs-6">$@Model.Price</span>
                            }
                        </div>

                        <p class="text-muted">@Model.Description</p>

                        <!-- INFO GRID -->
                        <div class="info-grid mt-4">

                            <div class="info-box">
                                <strong>Instructor</strong>
                                <div>@Model.InstructorName</div>
                            </div>

                            <div class="info-box">
                                <strong>Category</strong>
                                <div>@Model.CategoryName</div>
                            </div>
                            <div class="info-box">
                                <strong>Level</strong>
                                <div>@Model.LevelName</div>
                            </div>
                            <div class="info-box">
                                <strong>Language</strong>
                                <div>@Model.LanguageName</div>
                            </div>
                            <div class="info-box">
                                <strong>Duration</strong>
                                <div>@(Model.Duration + "hrs")</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- SECTIONS -->
                <div class="section-card mt-4">
                    <h4 class="fw-bold mb-3">What You Will Learn</h4>
                    <p>@Model.LearningOutCome</p>
                </div>

                <div class="section-card">
                    <h4 class="fw-bold mb-3">Requirements</h4>
                    <p>@Model.Requirement</p>
                </div>

                <!-- PRICE BOX -->
                <div class="mt-4 mb-5 d-flex justify-content-center">
                    <div class="price-box col-md-6">
                        @if (Model.IsFree)
                        {
                            <h2 class="text-success fw-bold">Free Course</h2>
                        }
                        else
                        {
                            <h2 class="fw-bold">$@Model.Price</h2>
                        }

                        @* <a href="#" class="btn btn-primary btn-lg w-100 mt-3 rounded-pill">
                            Enroll Now
                        </a> *@
                    </div>
                </div>

            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

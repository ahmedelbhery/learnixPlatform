@model EditCourseVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Course – Premium UI</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet">

    <style>
        /* Premium Glassmorphism Card */
        .glass-card {
            background: rgba(255, 255, 255, 0.85);
            border-radius: 20px;
            backdrop-filter: blur(10px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

        /* Floating Label Enhancement */
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            opacity: .75 !important;
            transform: scale(.85) translateY(-0.6rem) translateX(0.3rem);
        }

        /* Image Upload Container */
        .upload-box {
            border: 2px dashed #ccc;
            border-radius: 20px;
            height: 250px;
            position: relative;
            overflow: hidden;
            cursor: pointer;
            transition: .3s;
        }

            .upload-box:hover {
                border-color: #0d6efd;
            }

        .upload-overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.45);
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: .3s;
        }

        .upload-box:hover .upload-overlay {
            opacity: 1;
        }

        #imagePreview {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .disabled-input {
            background: #f1f1f1 !important;
            cursor: not-allowed;
        }

    </style>

</head>
<body class="bg-light">

    <div class="container py-5">

        <!-- Back Button -->
        <div class="d-flex justify-content-end mb-4">
            <a href="/Instructor/Course/Index" class="btn btn-outline-secondary shadow-sm">
                <i class="ri-arrow-left-line"></i> My Courses
            </a>
        </div>


        <!-- Header -->
        <div class="p-4 mb-4 rounded-3 text-white" style="background: linear-gradient(135deg, #4361ee, #3a0ca3);">
            <h2 class="fw-bold">Edit Course</h2>
            <p class="mb-0 opacity-75">Update your course information</p>
        </div>


        <!-- Main Card -->
        <div class="glass-card p-5">

            <form asp-action="SaveEditCourse" method="post" enctype="multipart/form-data" class="row g-4">

                <input type="hidden" asp-for="Id" />

                <!-- Image Upload -->
                <div class="col-12">
                    <label class="form-label fw-semibold">Course Image</label>

                    <div class="upload-box" onclick="document.getElementById('imageFileInput').click()">
                        <img id="imagePreview"
                             src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/no-image.png" : "/" + Model.ImageUrl)" />

                        <div class="upload-overlay">
                            <i class="ri-upload-cloud-2-fill display-5"></i>
                            <span class="small">Click to upload</span>
                        </div>

                        <input asp-for="ImageFile" type="file" id="imageFileInput"
                               accept="image/*" class="d-none"
                               onchange="previewImage(event)" />
                    </div>

                    <span asp-validation-for="ImageFile" class="text-danger small"></span>
                </div>

                <!-- Title -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Title" class="form-control" placeholder="Title">
                        <label>Title</label>
                    </div>
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <!-- Duration -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Duration" class="form-control" placeholder="Duration">
                        <label>Duration (hours)</label>
                    </div>
                    <span asp-validation-for="Duration" class="text-danger small"></span>
                </div>

                <!-- Price -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Price" id="priceInput" class="form-control" placeholder="Price">
                        <label>Price</label>
                    </div>
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <!-- Is Free Checkbox -->
                <div class="col-md-6 d-flex align-items-center">
                    <div class="form-check mt-3">
                        <input asp-for="IsFree" id="isFreeChk" class="form-check-input" type="checkbox" onchange="togglePrice()">
                        <label for="isFreeChk" class="form-check-label fw-semibold">This course is free</label>
                    </div>
                </div>

                <!-- Description -->
                <div class="col-12">
                    <label class="form-label fw-semibold">Description</label>
                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <!-- Learning Outcome -->
                <div class="col-12">
                    <label class="form-label fw-semibold">Learning Outcomes</label>
                    <textarea asp-for="LearningOutCome" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="LearningOutCome" class="text-danger small"></span>
                </div>

                <!-- Requirement -->
                <div class="col-12">
                    <label class="form-label fw-semibold">Requirements</label>
                    <textarea asp-for="Requirement" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Requirement" class="text-danger small"></span>
                </div>

                <!-- Category Dropdown -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Category</label>
                    <select asp-for="CategoryID" class="form-select">
                        @if (Model.CategoryID == 0)
                        {
                            <option value="-1" selected>Choose category...</option>
                        }
                        else
                        {
                            <option value="-1">Choose category...</option>
                        }

                        @foreach (var cat in Model.Categories)
                        {
                            if (Model.CategoryID == cat.Id)
                            {
                                <option value="@cat.Id" selected>@cat.Name</option>
                            }
                            else
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger small"></span>
                </div>

                <!-- Level Dropdown -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Course Level</label>
                    <select asp-for="CourseLevelID" class="form-select">
                        @if (Model.CourseLevelID == 0)
                        {
                            <option value="-1" selected>Choose Course Level...</option>
                        }
                        else
                        {
                            <option value="-1">Choose Course Level...</option>
                        }

                        @foreach (var lv in Model.CourseLevels)
                        {
                            if (Model.CourseLevelID == lv.Id)
                            {
                                <option value="@lv.Id" selected>@lv.Name</option>
                            }
                            else
                            {
                                <option value="@lv.Id">@lv.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CourseLevelID" class="text-danger small"></span>
                </div>

                <!-- Language Dropdown -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Language</label>
                    <select asp-for="CourseLanguageID" class="form-select">
                        @if (Model.CourseLanguageID == 0)
                        {
                            <option value="-1" selected>Choose Course Language...</option>
                        }
                        else
                        {
                            <option value="-1">Choose Course Language...</option>
                        }

                        @foreach (var lg in Model.CourseLanguages)
                        {
                            if (Model.CourseLanguageID == lg.Id)
                            {
                                <option value="@lg.Id" selected>@lg.Name</option>
                            }
                            else
                            {
                                <option value="@lg.Id">@lg.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CourseLanguageID" class="text-danger small"></span>
                </div>

                @* <!-- Status Dropdown -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Status</label>
                    <select asp-for="CourseStatusID" class="form-select">
                        @if (Model.CourseStatusID == 0)
                        {
                            <option value="-1" selected>Choose Course Status...</option>
                        }
                        else
                        {
                            <option value="-1">Choose Course Status...</option>
                        }

                        @foreach (var st in Model.CourseStatuses)
                        {
                            if (Model.CourseStatusID == st.Id)
                            {
                                <option value="@st.Id" selected>@st.Name</option>
                            }
                            else
                            {
                                <option value="@st.Id">@st.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CourseStatusID" class="text-danger small"></span>
                </div> *@

                <!-- Submit -->
                <div class="col-12 text-end mt-3">
                    <button class="btn btn-primary px-5 py-2 shadow-sm">
                        Save Changes
                    </button>
                </div>

            </form>

        </div>

    </div>


    <!-- jQuery + Validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // IMAGE PREVIEW
        function previewImage(e) {
            document.getElementById("imagePreview").src = URL.createObjectURL(e.target.files[0]);
        }

        // FREE COURSE LOGIC
        function togglePrice() {
            let isFree = document.getElementById("isFreeChk").checked;
            let price = document.getElementById("priceInput");

            if (isFree) {
                price.value = "";
                price.disabled = true;
                price.classList.add("disabled-input");
            } else {
                price.disabled = false;
                price.classList.remove("disabled-input");
            }
        }
        togglePrice();
    </script>

</body>
</html>

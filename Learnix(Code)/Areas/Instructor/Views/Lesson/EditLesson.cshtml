@model LessonEditVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Lesson - @Model.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background: #f5f7fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .card-custom {
            background: white;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0px 6px 18px rgba(0,0,0,0.10);
        }

        .section-title {
            font-weight: 600;
            margin-top: 25px;
        }

        .video-box {
            border-radius: 15px;
            overflow: hidden;
            margin-top: 10px;
            border: 2px solid #dee2e6;
        }

        label {
            font-weight: 600;
        }
    </style>
</head>

<body>

<div class="container mt-5 mb-5">

    <!-- Back to Course Button -->
    <div class="d-flex justify-content-end mb-4">
            <a asp-controller="Course" asp-action="DisplayCourseContent" asp-route-id="@Model.CourseId" class="btn btn-dark">
            Back to Course
        </a>
    </div>

    <div class="card-custom">

        <h2 class="fw-bold mb-4">Edit Lesson - @Model.Title</h2>

        <!-- Current Video Display -->
        @if (!string.IsNullOrEmpty(Model.VideoUrl))
        {
            <h5 class="section-title">Current Video</h5>
            <div class="video-box mb-4">
                <video id="currentVideo" width="100%" controls>
                    <source src="@Model.VideoUrl" type="video/mp4" />
                    Your browser does not support video playback.
                </video>
            </div>
        }

        <!-- Form -->
        <form asp-action="SaveEditLesson" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="LessonId" />
            <input type="hidden" asp-for="SectionId" />
            <input type="hidden" asp-for="CourseId" />

            <!-- Title -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Lesson Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter lesson title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter lesson description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Learning Objectives -->
            <div class="mb-3">
                <label asp-for="LearningObjectives" class="form-label">Learning Objectives (one per line)</label>
                <textarea asp-for="LearningObjectives" class="form-control" rows="4" placeholder="Enter learning objectives"></textarea>
                <span asp-validation-for="LearningObjectives" class="text-danger"></span>
            </div>

            <!-- Duration -->
            <div class="mb-3">
                <label asp-for="Duration" class="form-label">Duration (e.g., 15 min)</label>
                <input asp-for="Duration" class="form-control" placeholder="Enter duration" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <!-- Video Upload -->
            <div class="mb-4">
                <label class="form-label">Upload New Video</label>
                <input type="file" class="form-control" id="videoFile" name="VideoFile" accept="video/*" />
                <small class="text-muted">Select a video to replace the current one (optional).</small>
            </div>

            <!-- Video Preview -->
            <div id="previewContainer" style="display:none;">
                <h5 class="section-title">Video Preview</h5>
                <div class="video-box mb-4">
                    <video id="videoPreview" width="100%" controls></video>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-controller="Lesson" asp-action="EditLesson" asp-route-id="@Model.LessonId" class="btn btn-secondary">Cancel</a>
            </div>

        </form>

    </div>
</div>

<script>
    // Show video preview when a file is selected
    document.getElementById('videoFile').addEventListener('change', function (event) {
        const file = event.target.files[0];
        if (file) {
            const preview = document.getElementById('videoPreview');
            const container = document.getElementById('previewContainer');
            preview.src = URL.createObjectURL(file);
            container.style.display = 'block';
        }
    });
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>


</body>
</html>

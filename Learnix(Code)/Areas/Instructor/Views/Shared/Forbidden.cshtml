@{
    // Standalone Razor view for a beautiful 403 Forbidden page
    Layout = null; // set Layout = "_Layout" if you want to use your shared layout
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>403 - Forbidden</title>

    <!-- Tailwind CDN (for quick prototyping) -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">

    <style>
        body { font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial; }
        /* subtle floating background */
        .bg-blob {
            position: absolute;
            filter: blur(80px) saturate(120%);
            opacity: 0.25;
            transform: translateZ(0);
            will-change: transform;
            animation: float 12s ease-in-out infinite;
        }
       
        .glass { background: rgba(255,255,255,0.06); backdrop-filter: blur(8px) saturate(120%); }
      
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-slate-900 via-indigo-900 to-emerald-900 relative overflow-hidden text-slate-100">

    <!-- decorative blobs -->
    <svg class="bg-blob left-[-10%] top-[-10%] w-[45rem] h-[45rem] text-indigo-600" viewBox="0 0 600 600" fill="none" xmlns="http://www.w3.org/2000/svg" style="position:absolute;">
        <g transform="translate(50,50)">
            <path d="M206.6,-16.2C240.9,42.6,243.9,114.3,206.6,155.1C169.3,195.8,91.6,205.7,26.3,184.3C-39,163,-78,110.4-127.4,61.7C-176.9,12.9-236.7,-28.9-233.6,-75.7C-230.6,-122.6,-164.5,-174.5,-103.3,-196.2C-42.1,-217.9,11.1,-209.4,61.3,-179.9C111.6,-150.3,171.0,-100.0,206.6,-16.2Z" fill="currentColor"></path>
        </g>
    </svg>

    <svg class="bg-blob right-[-12%] bottom-[-12%] w-[35rem] h-[35rem] text-emerald-500" viewBox="0 0 600 600" fill="none" xmlns="http://www.w3.org/2000/svg" style="position:absolute;animation-duration:18s;">
        <g transform="translate(50,50)">
            <path d="M175.6,-29.6C215.9,10.7,259.9,42.1,260.3,78.7C260.8,115.2,217.7,156.9,170.9,171.5C124.2,186.2,73.9,173.8,31.4,155.7C-11.2,137.6,-44.5,113.9,-74.6,92.4C-104.8,70.9,-131.9,51.8,-154.1,21.9C-176.4,-8.1,-193.9,-46.2,-179.6,-77.9C-165.3,-109.5,-119.1,-134.8,-73.9,-149.3C-28.8,-163.8,15.3,-167.6,56.1,-162.8C96.8,-158,136.2,-144.0,175.6,-29.6Z" fill="currentColor"></path>
        </g>
    </svg>

    <main class="relative z-10 flex min-h-screen items-center justify-center p-6">
        <div class="max-w-4xl w-full">
            <div class="glass rounded-3xl p-8 sm:p-12 shadow-2xl border border-white/10">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">

                    <!-- Left: Icon + short message -->
                    <div class="flex flex-col items-start gap-6">
                        <div class="flex items-center justify-center w-20 h-20 rounded-xl bg-white/5 ring-1 ring-white/10">
                            <!-- lock / forbidden icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 text-amber-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <rect x="3" y="11" width="18" height="10" rx="2"></rect>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                        </div>

                        <div>
                            <h1 class="text-4xl sm:text-5xl font-extrabold tracking-tight">403 — Access forbidden</h1>
                            <p class="mt-3 text-slate-300 text-lg">You don’t have permission to view this resource. If you think this is a mistake, contact support or return to the homepage.</p>
                        </div>

                        <div class="flex flex-wrap gap-3 mt-3">
                            <a href="/Home/Index" class="inline-flex items-center gap-3 bg-amber-400/10 text-amber-300 hover:bg-amber-400/20 transition px-5 py-3 rounded-full font-semibold">
                                <!-- home icon -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                    <path d="M3 11.5L12 4l9 7.5V20a1 1 0 0 1-1 1h-5v-6H9v6H4a1 1 0 0 1-1-1V11.5z"></path>
                                </svg>
                                Back to Home
                            </a>

                            <a href="mailto:learnixelearningplatform@gmail.com" class="inline-flex items-center gap-3 border border-white/10 px-5 py-3 rounded-full text-sm hover:bg-white/5 transition">
                                Contact support
                            </a>
                        </div>

                        <div class="mt-4 text-sm text-slate-400">
                            <strong>Tip:</strong> Try signing in with an account that has the required permissions.
                        </div>
                    </div>

                    <!-- Right: big 403 code / illustration -->
                    <div class="flex flex-col items-center justify-center text-center">
                        <div class="text-8xl sm:text-[10rem] font-black leading-none text-white/10 select-none">403</div>
                        <div class="mt-6 text-slate-300">Forbidden — you don't have permission to access this page.</div>

                        @* <div class="mt-8 w-full flex items-center justify-center">
                            <div class="text-xs uppercase tracking-widest text-slate-500/80 rounded-full px-4 py-2 bg-white/3">Request ID: @ViewBag.RequestId ?? "-"</div>
                        </div> *@
                    </div>

                </div>

                <!-- subtle footer -->
                <div class="mt-8 border-t border-white/6 pt-6 text-center text-slate-400 text-sm">
                    © @DateTime.UtcNow.Year Learnix — Need help? <a href="mailto:learnixelearningplatform@gmail.com" class="underline">learnixelearningplatform@gmail.com</a>
                </div>
            </div>
        </div>
    </main>

</body>
</html>

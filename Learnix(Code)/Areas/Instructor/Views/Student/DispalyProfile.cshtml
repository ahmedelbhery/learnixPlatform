@model Learnix.ViewModels.UserVMs.DisplayUserInfoVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile - Learnix</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #eff3ff, #f7f9ff);
            font-family: 'Inter', 'Segoe UI', sans-serif;
        }

       

        /* Gradient Header */
        .top-banner {
            background: linear-gradient(135deg, #4f46e5, #6c5ce7);
            padding: 80px 30px;
            border-radius: 0 0 35px 35px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            position: relative;
            color: white;
        }

        /* Back Button */
        .back-btn {
            position: absolute;
            right: 25px;
            top: 25px;
            padding: 12px 20px;
            border-radius: 50px;
            font-size: 15px;
            background: rgba(255,255,255,0.2);
            backdrop-filter: blur(6px);
            color: #fff;
            border: 1px solid rgba(255,255,255,0.3);
            transition: 0.3s;
        }

        .back-btn:hover {
            background: rgba(255,255,255,0.35);
            transform: translateY(-2px);
        }

        /* Profile Card */
        .profile-wrapper {
            max-width: 1000px;
            margin: -60px auto 50px;
            animation: fadeUp .8s ease;
        }

        .profile-card {
            padding: 40px;
            border-radius: 25px;
            background: rgba(255,255,255,0.75);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255,255,255,0.5);
            box-shadow: 0 15px 40px rgba(0,0,0,0.1);
        }

        /* User Image */
        .profile-image {
            width: 180px;
            height: 180px;
            border-radius: 50%;
            object-fit: cover;
            border: 6px solid #ffffff;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .info-title {
            font-weight: 600;
            color: #6b7280;
        }

        .info-content {
            font-size: 1.15rem;
            font-weight: 500;
        }

        LinkedIn Button
        .linkedin-btn {
            padding: 10px 20px;
            border-radius: 10px;
            border: none;
            background: #0a66c2;
            color: white;
            transition: 0.3s;
        }

        .linkedin-btn:hover {
            background: #004a91;
            transform: translateY(-2px);
        }

        .modern-linkedin {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 22px;
            border-radius: 14px;
            background: #0a66c2;
            color: white;
            text-decoration: none;
            font-weight: 500;
            font-size: 15px;
            transition: 0.3s;
            box-shadow: 0 5px 20px rgba(10, 102, 194, 0.25);
        }

            .modern-linkedin:hover {
                background: #004a91;
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(10, 102, 194, 0.35);
            }

        .linkedin-icon-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
            width: 34px;
            height: 34px;
            border-radius: 10px;
            color: #0a66c2;
            font-size: 20px;
            box-shadow: 0 2px 8px rgba(255,255,255,0.4);
            transition: 0.3s;
        }

        .modern-linkedin:hover .linkedin-icon-wrapper {
            transform: rotate(8deg) scale(1.08);
        }

        


    </style>
</head>

<body>

    <!-- HEADER SECTION -->
    <div class="top-banner">
        <h1 class="fw-bold">Student Profile</h1>
        <p class="opacity-75">Student information and account details</p>

        <!-- Back to Home -->
        <a href="/Instructor/Course/DisplayCourseStudents/@Model.CourseID" class="back-btn" style="text-decoration:none">⬅ Back To My Students</a>
    </div>

    <!-- MAIN CARD -->
    <div class="profile-wrapper">
        <div class="profile-card">

            <!-- Image + Name -->
            <div class="text-center mb-4">
                <img src=@(Model.ImageUrl == null ? "/Images/Default_User_Image.jpg" : "/" + Model.ImageUrl) class="profile-image" alt="Profile Image">
                <h2 class="mt-3 fw-bold">@Model.FullName</h2>
                <p class="text-muted fs-5">@Model.Email</p>
            </div>

            <hr />

            <!-- USER INFO GRID -->
            <div class="row g-4">

                <div class="col-md-6">
                    <p class="info-title">Full Name</p>
                    <p class="info-content">@Model.FullName</p>
                </div>

                <div class="col-md-6">
                    <p class="info-title">Email</p>
                    <p class="info-content">@Model.Email</p>
                </div>

                <div class="col-md-6">
                    <p class="info-title">Phone Number</p>
                    <p class="info-content">@Model.PhoneNumber</p>
                </div>

                <div class="col-md-6">
                    <p class="info-title">Location</p>
                    <p class="info-content">@Model.Location</p>
                </div>

                <div class="col-md-12">
                    <p class="info-title">LinkedIn</p>

                    @if (!string.IsNullOrEmpty(Model.LinkedinUrl))
                    {
                        <a href="@Model.LinkedinUrl" target="_blank" class="modern-linkedin">
                            <div class="linkedin-icon-wrapper">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                     class="bi bi-linkedin" viewBox="0 0 16 16">
                                    <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16
                                 1.146v13.708c0 .633-.526 1.146-1.175
                                 1.146H1.175C.526 16 0 15.487 0
                                 14.854V1.146zM4.943 13.307V6.169H2.542v7.138h2.401zm-1.2-8.174c.837
                                 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822
                                 0-1.358.54-1.358 1.248 0 .694.52 1.248 1.327
                                 1.248h.015zm4.908 8.174h2.4V9.359c0-.211.015-.423.078-.575.172-.423.564-.862
                                 1.223-.862.862 0 1.206.65 1.206 1.603v3.782h2.4V9.25c0-2.178-1.158-3.187-2.701-3.187-1.263
                                 0-1.823.7-2.137 1.189h.015V6.169h-2.4c.03.678
                                 0 7.138 0 7.138z" />
                                </svg>
                            </div>
                            <span>View LinkedIn Profile</span>
                        </a>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No LinkedIn added.</p>
                    }
                </div>

                



                <div class="col-12">
                    <p class="info-title">Bio</p>
                    <p class="info-content">@Model.Bio</p>
                </div>

            </div>

        </div>
    </div>

</body>
</html>
